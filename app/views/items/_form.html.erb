<%= form_for @item do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name, "Nome" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :price, "Preço" %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :description, "Descrição" %><br />
    <%= f.text_area :description %>
  </p>
	<p>
		<%= f.label :location, "Localização"%><br />
		<%= f.text_field :location %>
	</p>
  <p><%= f.submit %></p>
<% end %>
